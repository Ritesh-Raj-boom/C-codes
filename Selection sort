#include<iostream>
using namespace std;

void SelectionSort(int arr[])
{
	for(int i=0;i<4;i++)
	{
		int min=i;
		for(int j=i+1;j<5;j++)
		{
			if (arr[j]<arr[min])
				min=j;		
			
		}
		if(min!=i)
		{
			int temp=arr[min];
			arr[min]=arr[i];
			arr[i]=temp;	
		}
	}	
	
	
}


int main()
{
	int arr[5];
	cout<<"Enter the elements in the array : "<<endl;
	for(int i=0;i<5;i++)
	{
		cin>>arr[i];
	}
	
	cout<<endl<<"Elements in the array without sorting"<<endl;
	for(int i=0;i<5;i++)
	{
		cout<<arr[i]<<" ";
	}
	
	SelectionSort(arr);
	
	cout<<endl<<"Elements in the array after sorting"<<endl;
	for(int i=0;i<5;i++)
	{
		cout<<arr[i]<<" ";
	}
	
	return 0;
	
	
}
